{
  "definitions": {
    "unit": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "player"
          ],
          "pattern": "^(.*)$"
        },
        "id": {
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "player"
          ],
          "pattern": "^(.*)$"
        },
        "position": {
          "type": "object",
          "title": "The Position Schema",
          "required": [
            "x",
            "y"
          ],
          "properties": {
            "x": {
              "type": "integer",
              "title": "The X Schema",
              "default": 0,
              "examples": [
                10
              ]
            },
            "y": {
              "type": "integer",
              "title": "The Y Schema",
              "default": 0,
              "examples": [
                10
              ]
            }
          }
        },
        "size": {
          "type": "object",
          "title": "The Size Schema",
          "required": [
            "w",
            "h"
          ],
          "properties": {
            "w": {
              "type": "integer",
              "title": "The W Schema",
              "default": 0,
              "examples": [
                10
              ]
            },
            "h": {
              "type": "integer",
              "title": "The H Schema",
              "default": 0,
              "examples": [
                10
              ]
            }
          }
        },
        "clickable": {
          "type": "boolean",
          "title": "The Clickable Schema",
          "default": false,
          "examples": [
            true,
            false
          ]
        },
        "draggable": {
          "type": "boolean",
          "title": "The Draggable Schema",
          "default": false,
          "examples": [
            true,
            false
          ]
        }
      },
      "required": [
        "name",
        "id",
        "position",
        "size",
        "clickable",
        "draggable"
      ]
    },
    "image": {
      "type": "object",
      "properties": {
        "billing_address": { "$ref": "#/definitions/unit" },
        "shipping_address": {
          "allOf": [
            { "$ref": "#/definitions/unit" },
            { "properties":
              { "image_url": { "type": "string" } },
              "required": ["image_url"]
            }
          ]
        }
      }
    },
    "text": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "text": {"type": "string",
          "default": "",
          "examples": ["Hi!"]
        },
        "font": {"type": "string", "default": "Arial", "examples": ["Arial", "Verdana"]},
        "size": {"type": "integer", "default": 11}
      }
    }
  },
  "$schema": "https://alexkovrigin.me/cavoke-files/schemas/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "status",
    "response"
  ],
  "properties": {
    "status": {
      "$id": "#/properties/status",
      "type": "string",
      "title": "The Status Schema",
      "default": "",
      "examples": [
        "OK",
        "Error"
      ],
      "pattern": "^(.*)$"
    },
    "response": {
      "$id": "#/properties/response",
      "type": "object",
      "title": "The Response Schema",
      "required": [
        "game"
      ],
      "properties": {
        "game": {
          "$id": "#/properties/response/properties/game",
          "type": "object",
          "title": "The Game Schema",
          "required": [
            "name",
            "author",
            "gameId",
            "status",
            "display"
          ],
          "properties": {
            "name": {
              "$id": "#/properties/response/properties/game/properties/name",
              "type": "string",
              "title": "The Name Schema",
              "default": "",
              "examples": [
                "Dummy Game"
              ],
              "pattern": "^(.*)$"
            },
            "author": {
              "$id": "#/properties/response/properties/game/properties/author",
              "type": "string",
              "title": "The Author Schema",
              "default": "",
              "examples": [
                "Teapot"
              ],
              "pattern": "^(.*)$"
            },
            "gameId": {
              "$id": "#/properties/response/properties/game/properties/gameId",
              "type": "string",
              "title": "The Gameid Schema",
              "default": "",
              "examples": [
                "47e7ce50763101ef364ea7a5dc6b1c57f99797037fab7d62437ca1674b3fe35a"
              ],
              "pattern": "^(.*)$"
            },
            "status": {
              "$id": "#/properties/response/properties/game/properties/status",
              "type": "string",
              "title": "The Status Schema",
              "default": "",
              "examples": [
                "Playing",
                "Finished"
              ],
              "pattern": "^(.*)$"
            },
            "display": {
              "$id": "#/properties/response/properties/game/properties/display",
              "type": "object",
              "title": "The Display Schema",
              "required": [
                "canvas",
                "alert_box",
                "text_input"
              ],
              "properties": {
                "canvas": {
                  "$id": "#/properties/response/properties/game/properties/display/properties/canvas",
                  "type": "object",
                  "title": "The Canvas Schema",
                  "required": [
                    "w",
                    "h",
                    "background_image",
                    "contents"
                  ],
                  "properties": {
                    "w": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/canvas/properties/w",
                      "type": "integer",
                      "title": "The W Schema",
                      "default": 0,
                      "examples": [
                        680
                      ]
                    },
                    "h": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/canvas/properties/h",
                      "type": "integer",
                      "title": "The H Schema",
                      "default": 0,
                      "examples": [
                        480
                      ]
                    },
                    "background_image": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/canvas/properties/background_image",
                      "type": "object",
                      "title": "The Background_image Schema",
                      "required": [
                        "image"
                      ],
                      "properties": {
                        "image": {
                          "$id": "#/properties/response/properties/game/properties/display/properties/canvas/properties/background_image/properties/image",
                          "type": "string",
                          "title": "The Image Schema",
                          "default": "",
                          "examples": [
                            "blank"
                          ],
                          "pattern": "^(.*)$"
                        }
                      }
                    },
                    "contents": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/canvas/properties/contents",
                      "type": "array",
                      "title": "The Contents Schema",
                      "items": {
                        "oneOf": [
                          { "$ref": "#/definitions/unit" },
                          { "$ref": "#/definitions/image" },
                          { "$ref": "#/definitions/text" }
                        ]
                      }
                    }
                  }
                },
                "alert_box": {
                  "$id": "#/properties/response/properties/game/properties/display/properties/alert_box",
                  "type": "object",
                  "title": "The Alert_box Schema",
                  "required": [
                    "text"
                  ],
                  "properties": {
                    "text": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/alert_box/properties/text",
                      "type": "string",
                      "title": "The Text Schema",
                      "default": "",
                      "examples": [
                        "123123"
                      ],
                      "pattern": "^(.*)$"
                    }
                  }
                },
                "text_input": {
                  "$id": "#/properties/response/properties/game/properties/display/properties/text_input",
                  "type": "object",
                  "title": "The Text_input Schema",
                  "required": [
                    "message_to_player"
                  ],
                  "properties": {
                    "message_to_player": {
                      "$id": "#/properties/response/properties/game/properties/display/properties/text_input/properties/message_to_player",
                      "type": "string",
                      "title": "The Message_to_player Schema",
                      "default": "",
                      "examples": [
                        "Guess the password!"
                      ],
                      "pattern": "^(.*)$"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}